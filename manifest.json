{
  "name": "Name of extension",
  "short_name": "",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "This extension allows you to share your screen in the multiparty web-meeting you are in.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "https://*.example.com/*",
    "https://*.test.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["https://*.example.com/*", "https://*.test.com/*"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_end"
  }]
}
